unit uMenu;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls;

type
  TfrmMenu = class(TForm)
    btEx1: TButton;
    btEx2: TButton;
    btEx3: TButton;
    procedure btEx1Click(Sender: TObject);
    procedure btEx2Click(Sender: TObject);
    procedure btEx3Click(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  frmMenu: TfrmMenu;

implementation

{$R *.dfm}

uses uEx1, uEx2;

procedure TfrmMenu.btEx1Click(Sender: TObject);
begin
  //Entrar Exercício 1
  frmEx1.ShowModal;
end;

procedure TfrmMenu.btEx2Click(Sender: TObject);
begin
  //Ir Exercício 2
  frmEx2.ShowModal;
end;

procedure TfrmMenu.btEx3Click(Sender: TObject);
begin
  //Ir Exercício 3
  frmEx3.ShowModal;
end;

end.
