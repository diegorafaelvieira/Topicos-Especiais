{$R *.dfm}

procedure Tfrm1B.btForToDoClick(Sender: TObject);
begin
  { Professor explicou que não existe conversão para FOR
   porque o FOR é determinado }
end;

procedure Tfrm1B.btSairClick(Sender: TObject);
begin
  //Ir Menu Principal
  frm1B.Close;

end;

procedure Tfrm1B.btWhileDoClick(Sender: TObject);
var gh, a : integer;
begin
  gh := 5;
  a := 8;
  while (gh <> 5) do
  begin
    a := a + gh;
    showMessage(a.ToString);
  end;

end;

end.

{
gh := 5; a := 8;
Repeat
  a := a + gh;
  showmessage(a.ToString);
until (gh <> 5);

}