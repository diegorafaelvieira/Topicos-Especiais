begin
  //Ir Form 1B
  frm1B.ShowModal;
end;

procedure TfrmMenu.bt1CClick(Sender: TObject);
begin
  //Ir Form 1C
  frm1C.ShowModal
end;

procedure TfrmMenu.bt2Click(Sender: TObject);
begin
  //Ir Formulário Exercício 2
  frmEx2.ShowModal;
